{
    "name": "a-d-w-s/qr-payment",
    "description": "Generating QR payments.",
    "license": "MIT",
    "type": "library",
    "homepage": "https://github.com/a-d-w-s/qr-payment",
    "support": {
        "source":"https://github.com/a-d-w-s/qr-payment",
        "issues":"https://github.com/a-d-w-s/qr-payment/issues"
    },
    "keywords": [
        "php", "qr", "qr code", "qr kÃ³d", "payment", "platba"
    ],
    "authors": [
        {
            "name": "Jan Brabec",
            "role": "Author",
            "email": "info@adws.cz"
        }
    ],
    "require": {
        "ext-mbstring": "*",
        "php": ">=8.2",
        "endroid/qr-code": "^6.0.9",
        "setasign/fpdf": "^1.8"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^10.5.5 || ^11.1.3 || ^12",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "ADWS\\QRPayment\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ADWS\\QRPayment\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyse": "phpstan analyse",
        "cs-check": "phpcs --colors -p",
        "cs-fix": "phpcbf --colors -p",
        "test": "phpunit --colors=always",
        "check": [
            "@analyse",
            "@test",
            "@cs-check"
        ]
    }
}
